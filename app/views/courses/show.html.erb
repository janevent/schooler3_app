<h1><%= @course.title %></h1>

<h3>Description:</h3>
<%= @course.description %>
<br>

<h3>Course Materials:</h3>
<% @course.materials.each do |i| %>
    <p><%= i.item %></p>
    
<%end%>

<h3>Student Enrollments:</h3>

<% if @course.enrollments %>
    <% @course.enrollments.each do |enroll|%>
    
        <%= enroll.student.name %>
        <br>
        <p>Start Date:  <%= enroll.start_date.strftime("%b %d, %Y") %></p>
        <% if enroll.end_date %>
            <p>End Date:  <%= enroll.end_date.strftime("%b %d, %Y") %></p>
        <%end%>
    <%end%>
<%end%>    
<br>

<%= button_to "delete course", course_path(@course.id), :method => "delete", data: {confirm: "Are you sure?"} %>

<%= link_to "Edit Course", edit_course_path(@course) %>
<br>
<%= link_to "Add One More Meeting", new_course_meeting_path(@course) %>
<br>
<%= link_to "Course Schedule", course_meetings_path(@course) %>
<br>
<%= link_to "Add a New Material", new_course_material_path(@course) %>
<br>
<%= link_to "See Course Materials", course_materials_path(@course) %>