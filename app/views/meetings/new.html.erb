
<br>
<h2>Add A Meeting For <%=@course.title%></h2>
<%= form_for [@course, @meeting] do |f| %>
    <%= f.collection_select :day_id, Day.all, :id, :name %>
    
    <%= f.label :start_time %>
    <%= f.text_field :start_time %>
    <%= f.label :end_time %>
    <%= f.text_field :end_time %>
    
    <%= f.hidden_field :student_id, value: @course.enrollments.first.student_id %>
    
    <%= f.submit "Create Meeting" %>
<%end%>

