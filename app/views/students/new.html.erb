

<%= form_tag students_path do %>
    <%= render partial: 'layouts/errors', locals: {object:@student} %>
    <%= label_tag('student[name]', "Name:")  %>
    <%= text_field_tag('student[name]') %>
    <%= label_tag('student[goal]', "Goal:") %>
    <%= text_area_tag('student[goal]') %>
    <%= submit_tag "Create Student" %>
<% end%>